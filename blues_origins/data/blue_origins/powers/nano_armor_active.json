{

    "type": "origins:multiple",

    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.saveToolbarActivator"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "blue_origins:nano_armor_charge",
            "comparison": ">",
            "compare_to": 0
        },
        "retain_state": false
    },
    "sparkle":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:spawn_particles",
            "particle": "minecraft:electric_spark",
            "count": 16,
            "speed": 0.0,
            "force": true,
            "spread": {
                "x": 0.25,
                "y": 0.35,
                "z": 0.25
            }
        },
        "interval": 2,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "natural_armor": {
        "type": "origins:conditioned_attribute",
        "modifier": {
            "attribute": "minecraft:generic.armor",
            "operation": "addition",
            "value": 20,
            "name": "Increased armor"
        },
        "tick_rate": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "hud": {
        "type": "origins:overlay",
        "texture": "minecraft:textures/block/glass.png",
        "strength": 1.0,
        "red": 1.0,
        "green": 1.0,
        "blue": 1.0,
        "draw_mode": "texture",
        "draw_phase": "below_hud",
        "hide_with_hud": false,
        "visible_in_third_person": false,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "energy_blast":{
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:raycast",
            "distance": 100,
            "block": true,
            "entity": true,
            "shape_type": "visual",
            "fluid_handling": "none",
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:execute_command",
                    "command": "say I've been hit!"
                }
            },
            "before_action": {
                "type": "origins:play_sound",
                "sound": "minecraft:block.beacon.power_select"
            },
            "hit_action": {
                "type": "origins:modify_resource",
                "modifier": {
                    "operation": "add_base_early",
                    "value": -10
                },
                "resource": "blue_origins:nano_armor_charge"
            },
            "miss_action": {
                "type": "origins:modify_resource",
                "modifier": {
                    "operation": "add_base_early",
                    "value": -10
                },
                "resource": "blue_origins:nano_armor_charge"
            },
            "command_along_ray": "particle minecraft:crit",
            "command_step": 1,
            "command_along_ray_only_on_hit": false
        },
        "cooldown": 60,
        "hud_render": {
            "should_render": true
        },
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "name": "Power-up",
    "description": "Once the armor is powered up, you can toggle it on and off."

}