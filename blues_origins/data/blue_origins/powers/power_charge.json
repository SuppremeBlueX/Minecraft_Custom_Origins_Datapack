{

    "type": "origins:multiple",

    "fire_power_charge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": 10
            },
            "resource": "blue_origins:fire_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:biome",
                    "condition": {
                        "type": "origins:temperature",
                        "comparison": ">",
                        "compare_to": 0.3
                    }
                },
                {      
                    "type": "origins:fluid_height",
                    "fluid": "minecraft:lava",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        }
    },
    "fire_power_discharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -5
            },
            "resource": "blue_origins:fire_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:biome",
            "condition": {
                "type": "origins:temperature",
                "comparison": "<=",
                "compare_to": 0.3
            }
        }
    },
    "lightning_charge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": 1
            },
            "resource": "blue_origins:lightning_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:fluid_height",
                    "fluid": "minecraft:water",
                    "comparison": "==",
                    "compare_to": 0
                },
                {      
                    "type": "origins:moving"
                }
            ]
        }
    },
    "lightning_supercharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": 20
            },
            "resource": "blue_origins:lightning_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:predicate",
            "predicate": "blue_origins:predicate/is_thundering"
        }
    },
    "lightning_discharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -5
            },
            "resource": "blue_origins:lightning_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:fluid_height",
            "fluid": "minecraft:water",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "light_discharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -5
            },
            "resource": "blue_origins:light_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:status_effect",
            "effect": "minecraft:darkness"
        }
    },
    "name": "Powers",
    "description": "You gain fire-power by sitting in lava. You gain lightning power while moving or in a thunderstorm. You gain light power when in sunlight."
}