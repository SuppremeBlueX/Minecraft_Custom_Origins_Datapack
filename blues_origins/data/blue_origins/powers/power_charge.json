{

    "type": "origins:multiple",

    "fire_power_charge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": 10
            },
            "resource": "blue_origins:fire_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:biome",
                    "condition": {
                        "type": "origins:temperature",
                        "comparison": ">",
                        "compare_to": 0.3
                    }
                },
                {      
                    "type": "origins:fluid_height",
                    "fluid": "minecraft:lava",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        }
    },
    "fire_power_discharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -5
            },
            "resource": "blue_origins:fire_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:biome",
            "condition": {
                "type": "origins:temperature",
                "comparison": "<=",
                "compare_to": 0.3
            }
        }
    },
    "lightning_charge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:if_else_list",
            "actions": [
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:moving"
                            },
                            {
                                "type": "origins:status_effect",
                                "effect": "minecraft:speed",
                                "min_amplifier": 1
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:modify_resource",
                        "modifier": {
                            "operation": "add_base_early",
                            "value": 5
                        },
                        "resource": "blue_origins:lightning_power"
                    }
                },
                {
                    "condition": {
                        "type": "origins:moving"
                    },
                    "action": {
                        "type": "origins:modify_resource",
                        "modifier": {
                            "operation": "add_base_early",
                            "value": 1
                        },
                        "resource": "blue_origins:lightning_power"
                    }
                },
                {
                    "condition": {
                        "type": "origins:predicate",
                        "predicate": "example:weather/is_thunderstorm"
                    },
                    "action": {
                        "type": "origins:modify_resource",
                        "modifier": {
                            "operation": "add_base_early",
                            "value": 20
                        },
                        "resource": "blue_origins:lightning_power"
                    }
                }
            ]
        },
        "interval": 5,
        "condition": {
            "type": "origins:fluid_height",
            "fluid": "minecraft:water",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "lightning_discharge": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -5
            },
            "resource": "blue_origins:lightning_power"
        },
        "interval": 5,
        "condition": {
            "type": "origins:fluid_height",
            "fluid": "minecraft:water",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "name": "Gaining Power",
    "description": "You gain fire-power by sitting in lava. You gain lightning power while moving or in a thunderstorm. You gain light power when in sunlight."
}