{

    "type": "origins:multiple",

    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "invisibility": {
        "type": "origins:invisibility",
        "render_armor": false,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "water_trail":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:block_action_at",
            "block_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:add_block",
                        "block": "minecraft:water"
                    },
                    {    
                        "type": "origins:delay",
                        "ticks": 30,
                        "action": {
                            "type": "origins:add_block",
                            "block": "minecraft:air"
                        }
                    }
                ]
            }
        },
        "interval": 1,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "one_block_tall":{
        "type": "origins:active_self",
        "entity_action":{
            "type": "origins:and",
            "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:height 0.25 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:width 0.25 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale persist set true @s"
            }
            ]
        },
        "key": {
            "key": "key.origins.secondary_active"
        },
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle",
            "inverted": true
        }
    },
    "normal_height":{
        "type": "origins:active_self",
        "entity_action":{
            "type": "origins:and",
            "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:height 1 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:width 1 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale persist set true @s"
            }
            ]
        },
        "key": {
            "key": "key.origins.secondary_active"
        },
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "become_water":{
        "type": "origins:ignore_water",
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "see_and_breathe_underwater":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:apply_effect",
            "effects": [
                {
                    "effect": "minecraft:water_breathing",
                    "duration": 400,
                    "is_ambient": false,
                    "show_particles": false,
                    "show_icon": true
                },
                {
                    "effect": "minecraft:nightvision",
                    "duration": 400,
                    "is_ambient": false,
                    "show_particles": false,
                    "show_icon": true
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "name": "Meld into Water",
    "description": "You can turn yourself into water. If this water source moves, you are transported with it. If it dries up due to a sponge, you instantly die. If you are already underwater, you can move freely in the water."

}