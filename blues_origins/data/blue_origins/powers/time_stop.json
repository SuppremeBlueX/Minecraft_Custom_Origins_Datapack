{

    "type": "origins:multiple",

    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.secondary_active"
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "blue_origins:time_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {      
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:clock"
                        }
                    }
                }
            ]
        },
        "retain_state": false
    },

    "freeze_mobs": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:area_of_effect",
                    "radius": 32,
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:execute_command",
                            "command": "execute as @s run data merge entity @s {NoAI: 1}"
                        }
                    }
                },
                {    
                    "type": "origins:delay",
                    "ticks": 400,
                    "action":{
                        "type": "origins:area_of_effect",
                        "radius": 32,
                        "bientity_action": {
                            "type": "origins:target_action",
                            "action": {
                                "type": "origins:execute_command",
                                "command": "execute as @s run data merge entity @s {NoAI: 0}"
                            }
                        }
                    }
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },

    "freeze_players": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:area_of_effect",
            "radius": 32,
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:execute_command",
                    "command": "execute as @s run data merge entity @s {NoAI: 1}"
                }
            },
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:nbt",
                    "nbt": "{Tags: ['time_immune']}",
                    "inverted": true
                }
            }
        },
        "interval": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "name": "Time Stop",
    "description": "You stop time around you, causing all entities within a 32-block radius to completely freeze except for you for 20 seconds."
}