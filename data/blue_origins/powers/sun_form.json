{

    "type": "origins:multiple",

    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.saveToolbarActivator"
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "blue_origins:fire_power",
                    "comparison": ">",
                    "compare_to": 0
                },
                {      
                    "type": "origins:resource",
                    "resource": "blue_origins:light_power",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "blue_origins:power_of_light_fire_lightning",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "retain_state": false
    },
    "sun_glow": {
        "type": "origins:stacking_status_effect",
        "min_stacks": 0,
        "max_stacks": 1,
        "duration_per_stack":20,
        "effects": [
            {
                "effect": "minecraft:glowing",
                "duration": 100,
                "amplifier": 0,
                "is_ambient": true,
                "show_particles": false,
                "show_icon": false
            }
        ],
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "creative_fly_":{
        "type": "origins:creative_flight",
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "light_power_use_over_time":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -40
            },
            "resource": "blue_origins:light_power"
        },
        "interval": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "fire_power_use_over_time":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "value": -40
            },
            "resource": "blue_origins:fire_power"
        },
        "interval": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "burn_water":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "fill ~-1 ~-5 ~-5 ~5 ~5 ~5 air replace water"
        },
        "interval": 5,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "burn_entities":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:area_of_effect",
            "radius": 16,
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:set_on_fire",
                    "duration": 5
                }
            },
            "bientity_condition": {
                "type": "origins:can_see"
            }
        },
        "interval": 5,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "blind_on_activation":{
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:area_of_effect",
            "radius": 16,
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:blindness",
                        "duration": 400,
                        "amplifier": 0
                    }
                }
            },
            "bientity_condition": {
                "type": "origins:can_see"
            }
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "blue_origins:fire_power",
                    "comparison": ">",
                    "compare_to": 500
                },
                {      
                    "type": "origins:resource",
                    "resource": "blue_origins:light_power",
                    "comparison": ">",
                    "compare_to": 500
                },
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle"
                }
            ]
        }
    },
    "sun_hud": {
        "type": "origins:overlay",
        "texture": "minecraft:textures/block/magma.png",
        "strength": 0.3,
        "red": 1.0,
        "green": 1.0,
        "blue": 1.0,
        "draw_mode": "texture",
        "draw_phase": "below_hud",
        "hide_with_hud": false,
        "visible_in_third_person": false,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "name": "\u00A72\u00A7nSun Form",
    "description": "You become a small sun temporarily. While in this form, you burn any water [5 blocks] and creatures around you [16 blocks]. You can also fly. If you have at least half power when this is activated, you blind nearby players. You cannot hold this form long though, as your fire and light powers burn out quickly in this form."
}