                "radius": 32,
                "bientity_action": {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:execute_command",
                        "command": "scoreboard players add @s Pestilence 10"
                    }
                }
            },
            "chance": 0.1
        },
        "interval": 1200,
        "condition": {
            "type": "origins:on_fire"
