{
    "type": "origins:action_on_entity_use",
    "bientity_action": {
        "type": "origins:target_action",
        "action": {
            "type": "origins:chance",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "data merge entity @s {Gossips:[{Type:'minor_positive',Value:40,Target:[I;1,1,1,1]}]}"
                    },
                    {    
                        "type": "origins:execute_command",
                        "command": "data modify entity @s Gossips[0].Target set from entity @p UUID"
                    },
                    {    
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.villager.yes ambient @s ~ ~ ~"
                    }
                ]
            },
            "chance": 0.6,
            "fail_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "data merge entity @s {Gossips:[{Type:'minor_negative',Value:40,Target:[I;1,1,1,1]}]}"
                    },
                    {    
                        "type": "origins:execute_command",
                        "command": "data modify entity @s Gossips[0].Target set from entity @p UUID"
                    },
                    {    
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.villager.no ambient @s ~ ~ ~"
                    }
                ]
            }
        }
    },
    "bientity_condition":{
        "type": "origins:target_condition",
        "condition": {
            "type": "origins:nbt",
            "nbt": "{Gossips[]}"
        }
    }
}